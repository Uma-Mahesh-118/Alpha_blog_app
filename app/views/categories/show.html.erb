<div id="page-content">
  <h2 class="text-center mt-4">Category: <%= @category.name %></h2>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"> <%= link_to @category.name, category_path(@category), {:class=>"text-success"} %></h5>
            <h6 class="text-center"> <%= "#{@category.articles.count} Articles" %></h6> 
            <hr>
            <h5> Articles: </h5>
              <% if @category.articles.any? %>
                <div class="mt-2"><%= render @category.articles %></div> 
              <% end %>
            <hr>
            <% if logged_in? && ( current_user.admin? )%>
              <%= link_to "Edit", edit_category_path(@category), class: "btn btn-outline-info" %>
            <%end%>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@category.created_at) %> ago, 
            edited <%= time_ago_in_words(@category.updated_at) %> ago</small>
          </div>
        </div>   
      </div>
      <div class="container text-center">
        <%= link_to 'Return to Category path', categories_path, {:class=>"btn btn-outline-primary"}%> 
      </div>
    </div>  
  </div>
</div>